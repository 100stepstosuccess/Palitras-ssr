mixin auth-form(title, login, reset)
  .container.wrapper
    .authForm
      .left
        h2= title
        if login
          .box
            p Having trouble signing in? 
              a(href="/forgot-password").link reset your password.
      .right
        .spinner
        form(method="POST")
          .email-box
            input(type="email" name="email" required autofocus).email
            label(for="email").email-label email
            i.material-icons.input-icon mail_outline
            i.material-icons.valid done
          if !reset
            .password-box
              input(type="password" name="password" required).password
              label(for="password").password-label password
              i.material-icons.input-icon vpn_key
              i.material-icons.valid done
          input(type="submit" value= title).btn